
@{ ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/abletheme/images/favicon.ico" type="image/x-icon">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/abletheme/css/style.css">




</head>
<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content">
            <div class="card">
                <div class="row align-items-center text-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h3>Downtime Alerter</h3>
                            <h6 style=" text-align:right;margin-right: 25px;">
                                for Invicti
                            </h6>                            
                            <div class="form-group mb-3">
                                <input type="text" class="form-control" id="txtUserName" placeholder="Username">
                            </div>
                            <div class="form-group mb-4">
                                <input type="password" class="form-control" id="txtPassword" placeholder="Password">
                            </div>
                            <button class="btn btn-block btn-primary mb-4" id="btnSignin">Signin</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signin ] end -->
    <!-- Required Js -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/abletheme/js/plugins/bootstrap.min.js"></script>
    <script src="~/abletheme/js/vendor-all.min.js"></script>
    <script src="~/abletheme/js/plugins/bootstrap.min.js"></script>
    <script src="~/abletheme/js/ripple.js"></script>
    <script src="~/js/bootbox/bootbox.all.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#txtUserName,#txtPassword").on('keyup',
                function (e) {
                    if (e.key === 'Enter' || e.keyCode === 13) {
                        $('#btnSignin').click();                        
                    }
                });
        })
        $('#btnSignin').on('click', function () {

            var formData = {
                Username: $('#txtUserName').val(),
                Password: $('#txtPassword').val()
            }

            $.ajax({
                url: '@Url.Action("Login")',
                type: 'POST',
                async: true,
                data: formData,
                dataType: "json",
                success: function (response) {
                    StartRecurringNotificationJob();
                    window.location.href = "/Home/Index";
                },
                error: function (ex) {
                    bootbox.alert("Unexpected Error : "+ex.msg);
                }
            });

        });

        function StartRecurringNotificationJob() {
            $.ajax({
                url: '@Url.Action("StartRecurringNotificationJob","Job")',
                type: 'GET',
                async: true,
                dataType: "json",
                success: function (response) {

                },
                error: function (ex) {

                }
            });
        }
    </script>

</body>

</html>
